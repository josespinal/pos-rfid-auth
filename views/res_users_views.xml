            <field name="model">res.users</field>
            <field name="inherit_id" ref="point_of_sale.res_users_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pos_security_pin']" position="after">
                    <separator string="AutenticaciÃ³n RFID"/>
                    <field name="rfid_card_id" placeholder="Escanee o ingrese ID de tarjeta RFID"/>
                    <field name="pos_require_rfid"/>
                    <field name="pos_rfid_pin_combination" attrs="{'invisible': [('pos_require_rfid', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 